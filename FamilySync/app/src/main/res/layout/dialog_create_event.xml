<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/colorWhite">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Predefined"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:background="@drawable/border">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Select Predefined Event:"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Spinner
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:background="@color/colorWhite"
                    android:id="@+id/eventSpinner"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:text="Delete"
                    android:id="@+id/deleteSavedEventButton"
                    android:background="@color/colorWhite"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Event"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:layout_marginBottom="5dp">

            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateTitleTextView"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:backgroundTint="@color/editTextLine"
                android:textCursorDrawable="@null"
                android:id="@+id/titleEditText" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location"
                android:backgroundTint="@color/editTextLine"
                android:textCursorDrawable="@null"
                android:id="@+id/locationEditText" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Notes"
                android:backgroundTint="@color/editTextLine"
                android:textCursorDrawable="@null"
                android:id="@+id/notesEditText" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/bottom_border"
                android:layout_marginBottom="15dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Start Time:"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="18sp"
                    android:id="@+id/timeTextView"
                    android:clickable="true"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:gravity="center"
                    android:background="@color/colorWhite"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Save to Predefined"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorWhite"
                    android:id="@+id/saveEventButton" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="Add"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorWhite"
                    android:id="@+id/addEventButton" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="#EEEEEE"
            android:layout_margin="5dp"
            android:id="@+id/cancelEventButton" />

    </LinearLayout>

</LinearLayout>
